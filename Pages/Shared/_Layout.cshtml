<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prime Video Payment</title>

    @* Incluir Bootstrap y estilos base *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrimeVideoPaymentSimulator.styles.css" asp-append-version="true" />
</head>
<body>
    @* Contenedor Principal (eliminamos Header y Footer por defecto) *@
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* Scripts esenciales: jQuery para tu validación y Bootstrap *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Sección para scripts específicos de la página Payment.cshtml *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>